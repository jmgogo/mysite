---
import type { HTMLAttributes } from "astro/types";
import { cva, type VariantProps } from "class-variance-authority";

const badgeVariants = cva(
  "inline-flex items-center justify-center rounded-full border px-2 py-0.5 text-xs font-medium w-fit whitespace-nowrap shrink-0 [&>svg]:size-3 gap-1 [&>svg]:pointer-events-none focus-visible:border-ring focus-visible:ring-ring/50 focus-visible:ring-[3px] aria-invalid:ring-destructive/20 dark:aria-invalid:ring-destructive/40 aria-invalid:border-destructive transition-[color,box-shadow] overflow-hidden",
  {
    variants: {
      variant: {
        primary:
          "border-transparent bg-primary text-primary-foreground in-[a]:hover:bg-primary/90",
        secondary:
          "border-transparent bg-secondary text-secondary-foreground in-[a]:hover:bg-secondary/90",
        destructive:
          "border-transparent bg-destructive text-white in-[a]:hover:bg-destructive/90 focus-visible:ring-destructive/20 dark:focus-visible:ring-destructive/40 dark:bg-destructive/60",
        outline:
          "text-foreground in-[a]:hover:bg-accent in-[a]:hover:text-accent-foreground",
      },
    },
    defaultVariants: {
      variant: "primary",
    },
  },
);

export interface Props
  extends HTMLAttributes<"span">, VariantProps<typeof badgeVariants> {}

const { class: className, variant, ...rest } = Astro.props;
---

<span
  data-slot="badge"
  class:list={[badgeVariants({ variant }), className]}
  {...rest}
>
  <slot />
</span>
